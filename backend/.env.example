NODE_ENV=development
PORT=5000

# Mongo
MONGODB_URI=mongodb://localhost:27017/workmesh

# CORS & Frontend
CORS_ORIGIN=http://localhost:3000
FRONTEND_BASE_URL=http://localhost:3000

# Email - "Send form to client" feature
# Leave SMTP_* unset = uses Ethereal (fake inbox, no real delivery; good for localhost)
# Set SMTP_* for real delivery (Gmail, SendGrid, Mailgun, etc.)
#
# Gmail: use App Password (not your normal password)
#   SMTP_HOST=smtp.gmail.com
#   SMTP_PORT=587
#   SMTP_SECURE=false
#   SMTP_USER=your@gmail.com
#   SMTP_PASS=your-app-password
#
# SendGrid / Mailgun: use their SMTP relay and API key
#
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM="Work Mesh" <noreply@yourdomain.com>

# Auth
JWT_ACCESS_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

